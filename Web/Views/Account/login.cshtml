@model LoginModel
<div class="row">
    <div class="col-6">
        <h5>Login Page</h5>
        <hr />
        <form asp-controller="account" asp-action="login" method="post">
            <input type="hidden" asp-for="@Model.ReturnUrl"/>
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                <label>Username</label>
                <input type="text" class="form-control" asp-for="@Model.UserName"/>
                <span class="text-danger" asp-validation-for="@Model.UserName"></span>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" asp-for="@Model.Password" />
                <span class="text-danger" asp-validation-for="@Model.Password"></span>
            </div>
            <button class="btn btn-primary">Login</button>
        </form>
    </div>
</div>